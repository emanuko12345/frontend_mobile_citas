<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="20dp"
    android:background="#061A2E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombrePaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paciente: Alejandro"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textColor="#5DE2FF"/>

        <EditText
            android:id="@+id/etPeso"
            android:hint="Peso (kg)"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#061A2E"
            android:padding="14dp"
            android:backgroundTint="#5DE2FF"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etAltura"
            android:hint="Altura (cm)"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#061A2E"
            android:padding="14dp"
            android:backgroundTint="#5DE2FF"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etPresion"
            android:hint="Presión (ej. 120/80)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#061A2E"
            android:padding="14dp"
            android:backgroundTint="#5DE2FF"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etGlucosa"
            android:hint="Glucosa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#061A2E"
            android:padding="14dp"
            android:backgroundTint="#5DE2FF"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etRitmo"
            android:hint="Ritmo Cardíaco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#061A2E"
            android:padding="14dp"
            android:backgroundTint="#5DE2FF"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diagnóstico Médico"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etDiagnostico"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Escriba aquí el dictamen..."
            android:gravity="top"
            android:textColor="#FFFFFF"
            android:textColorHint="#061A2E"
            android:padding="14dp"
            android:backgroundTint="#5DE2FF"
            android:background="@android:drawable/dialog_holo_light_frame"/>

        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Finalizar Consulta"
            android:textStyle="bold"
            android:textColor="#061A2E"
            android:backgroundTint="#5DE2FF"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>